# Maintainer: William Turner <willtur.will@gmail.com>

_pkgname=otf-berkeley-mono
pkgname="${_pkgname}-slash-lig"
pkgver=2.0.0
pkgrel=1
pkgdesc='A monospace font for professionals. (slashed 0 with ligatures)'
arch=('any')
url='https://usgraphics.com/products/berkeley-mono'
license=('custom')
provides=("${_pkgname}")
conflicts=("${_pkgname}")
_package=2412271YRP00ZVX8
_ticket=PPR66727
source=("${_package}.zip")
sha256sums=('01a65a5dc0d5514193164071e4ee78a93cec4a73cb6b8b1686f0343b4f56fe72')

package() {
  cd "${_package}"

  install -d -m0755 "${pkgdir}/usr/share/fonts/OTF"
  install -m0644 "TX-02-${_ticket}/TX-02-Regular.otf" "${pkgdir}/usr/share/fonts/OTF/BerkeleyMono-Regular.otf"
  install -m0644 "TX-02-${_ticket}/TX-02-Bold.otf" "${pkgdir}/usr/share/fonts/OTF/BerkeleyMono-Bold.otf"
  install -m0644 "TX-02-${_ticket}/TX-02-Oblique.otf" "${pkgdir}/usr/share/fonts/OTF/BerkeleyMono-Italic.otf"
  install -m0644 "TX-02-${_ticket}/TX-02-Bold-Oblique.otf" "${pkgdir}/usr/share/fonts/OTF/BerkeleyMono-BoldItalic.otf"

  install -D -m0644 README.txt "${pkgdir}/usr/share/licenses/${pkgname}/README.txt"
}
